@model BookModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<br />
<div class="row">
    <div class="col-md-8">
        <form method="POST" action="/Admin/Book/Create">

            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Title">
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Vote" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Vote">
                </div>
            </div>
            <div>
                <label asp-for="Writer" ></label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.Cv, new { @class = "form-control" })
                </div>
            </div>
            <br />

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-success">Save Product</button>
            </div>
        </div>
        </form>
    </div>
</div>