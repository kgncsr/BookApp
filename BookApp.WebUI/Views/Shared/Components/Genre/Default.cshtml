@model List<Genre>

<div class="list-group">
    <a href="/Book/AllList" class="list-group-item list-group-item-action">Tüm Kitaplar</a>
    @foreach (var item in Model)
    {
        <a asp-controller="Book" asp-action="AllList" asp-route-id="@item.GenreId" class="list-group-item list-group-item-action @(ViewBag.Selected==item.GenreId.ToString()?"active":"")">@item.Name</a>
    }
</div>